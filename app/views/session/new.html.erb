<div class="container">
<%= simple_form_for(@user, :url => {:controller => "session", :action => "create"}, :html => {class: "form-horizontal"}) do |f| %>
    <%= f.error_notification %>
        <%= f.input :email, :label => "Email: " %>
        <%= f.input :password, :label => "Password: " %>
        <%= f.submit "Login", class: "btn btn-primary"%>
<% end %>
</div>
